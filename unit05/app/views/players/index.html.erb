<h1>Listing the players</h1>
<%= @team.name %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Jersey</th>
      <th>Platoon</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
     <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.jersey %></td>
        <td><%= player.platoon %></td>
        <td><%= link_to 'Show', [@team, player] %></td>
        <td><%= link_to 'Edit', edit_team_player_path(@team, player) %></td>
        <td><%= link_to 'Destroy', [@team, player], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Player', new_team_player_path(@team) %>
